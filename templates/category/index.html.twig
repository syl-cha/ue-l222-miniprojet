{% extends 'base.html.twig' %}

{% block title %}UE-L222 | Categories{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="my-4">Catégories</h1>

        {% if categories|length > 0 %}
            <ul class="list-group">
                {% for category in categories %}
                    <li class="list-group-item d-flex">
                        <a href="{{ path('articles_by_category', {'id': category.id}) }}">
                            {{ category.name }}
                        </a>
                        {% if is_granted('ROLE_ADMIN') %}
                            <a href="{{ path('category_edit', {'id': category.id}) }}" 
                                class="btn btn-warning btn-sm ms-auto">
                                <i class="bi bi-pencil"></i> Modifier
                            </a>
                        {% endif %}
                    </li>
                {% endfor %}
            </ul>
        {% else %}
            <p class="text-center">Pas de catégories trouvées.</p>
        {% endif %}

        <a href="{{ path('category_new') }}" class="btn btn-primary mt-4">Créer une nouvelle catégorie</a>
    </div>
{% endblock %}
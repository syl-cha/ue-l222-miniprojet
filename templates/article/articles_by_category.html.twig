{% extends 'base.html.twig' %}

{% block title %}Articles - {{ category.name }}{% endblock %}

{% block body %}
<div class="container">
    <h1 class="my-4">Articles in "{{ category.name }}"</h1>

    {% if articles|length > 0 %}
        <div class="row g-4">
            {% for article in articles %}
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 shadow-sm">
                        <img src="{{ article.image }}" alt="{{ article.title }}" class="img-fluid rounded">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">{{ article.title }}</h5>
                            <p class="text-muted fst-italic mb-2">
                                Publié le {{ article.createdAt|date('d/m/Y') }}
                                {% if article.author %}
                                    par {{ article.author.firstName }} {{ article.author.lastName | upper }}
                                {% endif %}
                            </p>
                            <a href="{{ path('article_show', {'id': article.id}) }}" 
                               class="btn btn-primary mt-auto">Voir l'article</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <p class="text-center">Pas d'articles dans cette catégorie.</p>
    {% endif %}

    <a href="{{ path('category_index') }}" class="btn btn-secondary mt-4">Retour aux catégories</a>
</div>
{% endblock %}